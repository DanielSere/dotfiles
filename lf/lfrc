## Setting ##
#############
set drawbox true
set ignorecase true
set icons true
set nohidden
set info size
set ifs "\n"
set filesep "\n"
set preview true
set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner
set shell sh

# Setting
set drawbox true
set ignorecase true
set icons true
set hidden true
set info size
set ifs "\n"
set filesep "\n"
set preview true
set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}

cmd chmod ${{
  printf "Mode Bits: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}

cmd sudomkfile ${{
  printf "File Name: "
  read ans
  sudo mkdir $ans
}}

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map d
map c
map e
map f
map gg

# Basics
map <enter> $$EDITOR "$f"
map md mkdir
map mf mkfile
map ch chmod
map smf sudomkfile
map . set hidden!
map DD delete
map p paste
map x cut
map y copy
map ms $mkscript
map ch chmod
map bg setwallpaper
map o open_config
map br $vimv $fx
map r rename
map H top
map L bottom
map R reload
map C clear
map U unselect

############################
## wm independent hotkeys ##
############################

# terminal
super + Return
	kitty

# floating terminal
super + alt + Return
	bspc rule -a \* -o state=floating && kitty

# open appfinder
super + @Menu
	rofi -combi-modi drun -display-combi "Run:" -display-drun "" -show combi

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# open clipman popup
super + c
	rofi -modi "Clipboard:~/.config/rofi/clipmenu print" -show Clipboard
# opem emojimenu
super + e
	rofi -modi emoji -show emoji -display-emoji Emoji

# open launcher
super + l
	bash ~/.config/rofi/launcher.sh

# open cmus
super + m
	bash ~/.config/rofi/musicmenu.sh

# open nmtui
super + n
	~/.config/rofi/wifimenu.sh

# open powermenu
super + p
	bash ~/.config/rofi/powermenu.sh

# screenshooter
super + s
	xfce4-screenshooter

# open window state menu
super + w
	bash ~/.config/rofi/windowmenu.sh

super + ctrl + shift + n
	echo -n 'Ññ' | xclip -selection clipboard ; sleep 0.2 ; xdotool type $(xclip -o -selection clipboard)

###################
## bspwm hotkeys ##
###################

# quit bspwm
super + Q
	bspc quit

# restart bspwm
super + r
	bspc wm -r

# close window
super + q
	bspc node -c

# kill window
super + k
	bspc node -k

#####################
## Toggle touchpad ##
#####################

super + ctrl + Escape
	touchpad_toggle.sh
###########
## focus ##
###########

# toggle fullscreen
super + f
	bspc node --state ~fullscreen

# toggle hide-show
super + h
	hideshow.sh

# change windows focus
super + alt + { Left, Down, Up, Right, Next, Prior }
	bspc node -f { west, south, north, east, next.local.!hidden.window, prev.local.!hidden.window }

# focus next/prev desktop
super + { Left, Right }
	bspc desktop -f { prev, next }

# send to next/prev desktop
super + ctrl + { Left, Right }
	bspc node -d { prev, next } --follow

############
## resize ##
############

# risize windows
super + shift + { Left, Down, Up, Right }
	{bspc node @parent/second -z left -20 0 ; bspc node @parent/first -z right -20 0, \
	bspc node @parent/second -z top 0 +20 ; bspc node @parent/first -z bottom 0 +20, \
	bspc node @parent/first -z bottom 0 -20 ; bspc node @parent/second -z top 0 -20, \
	bspc node @parent/first -z right +20 0 ; bspc node @parent/second -z left +20 0}
